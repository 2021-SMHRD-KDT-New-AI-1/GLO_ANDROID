<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <View
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:background="#19A2A3"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview6"
                android:layout_width="320dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"

                android:layout_alignParentEnd="false"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/playnote1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"

                    app:srcCompat="@drawable/design2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/applesdgothicneob"
                    android:text="차분한, 고요한 ♪"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview7"
                android:layout_width="320dp"
                android:layout_height="90dp"
                android:layout_below="@+id/cardview6"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/playnote2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"

                    app:srcCompat="@drawable/design3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/applesdgothicneob"
                    android:text="신나는, 활기찬 ♪"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview8"
                android:layout_width="320dp"
                android:layout_height="90dp"

                android:layout_below="@+id/cardview7"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/playnote3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"

                    app:srcCompat="@drawable/design4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/applesdgothicneob"
                    android:text="날 위로해주는 ♪"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview9"
                android:layout_width="320dp"
                android:layout_height="90dp"

                android:layout_below="@+id/cardview8"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/playnote4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"

                    app:srcCompat="@drawable/design5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/applesdgothicneob"
                    android:text="가사없이 듣는 ♪"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview10"
                android:layout_width="320dp"
                android:layout_height="90dp"
                android:layout_below="@+id/cardview9"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:id="@+id/playnote5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"

                    app:srcCompat="@drawable/design6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/applesdgothicneob"
                    android:text="플레이리스트 ♪"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>
